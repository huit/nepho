{#

   Reports on the contact address of the main Public-facing ELB.
   
   Expects public ELB host instance called "PublicElasticLoadBalancer".

#}

    {%- macro elb(name) -%}
    
    "{{ name }}URL" : {
      "Description" : "URL of the website",
      "Value" :  { "Fn::Join" : [ "", [ "http://", { "Fn::GetAtt" : [ "{{ name }}", "DNSName" ]}]]}
    }
    {% endmacro %}